<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
<servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>game.servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>game.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>game.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LobbyServlet</servlet-name>
        <servlet-class>game.servlets.LobbyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EnterRoomServlet</servlet-name>
        <servlet-class>game.servlets.EnterRoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PluyTurnServlet</servlet-name>
        <servlet-class>game.servlets.PlayTurnServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BoardAndPlayersServlet</servlet-name>
        <servlet-class>game.servlets.BoardAndPlayersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetRoomServlet</servlet-name>
        <servlet-class>game.servlets.ResetRoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuitGameServlet</servlet-name>
        <servlet-class>game.servlets.QuitGameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/pages/signup/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/game/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LobbyServlet</servlet-name>
        <url-pattern>/lobby</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EnterRoomServlet</servlet-name>
        <url-pattern>/enter_room</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PluyTurnServlet</servlet-name>
        <url-pattern>/play_turn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BoardAndPlayersServlet</servlet-name>
        <url-pattern>/board_and_players</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetRoomServlet</servlet-name>
        <url-pattern>/reset_room</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuitGameServlet</servlet-name>
        <url-pattern>/quit_player</url-pattern>
    </servlet-mapping>
</web-app>